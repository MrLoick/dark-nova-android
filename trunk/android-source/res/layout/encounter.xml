<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
<TextView android:text="at 2 clicks"
 android:id="@+id/line1" 
 android:layout_marginTop="150dp"
 android:layout_marginLeft="30dp"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content"
 ></TextView>
 
<TextView android:text="@+id/TextView02" 
android:id="@+id/line2" 
android:layout_marginLeft="30dp"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></TextView>

<TextView android:text="@+id/TextView03" 
android:id="@+id/line3"
android:layout_marginLeft="30dp"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content"></TextView>
  
<TextView android:text="@+id/TextView04" 
android:id="@+id/line4" 
android:layout_marginLeft="30dp"
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></TextView>


</LinearLayout>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
<Button android:text="Surrender" 
android:id="@+id/surrender" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></Button>

  
<Button android:text="Flee" 
android:id="@+id/flee" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content"></Button>

<Button android:text="Ignore" 
android:id="@+id/ignore" 

android:layout_width="wrap_content" 
android:layout_height="wrap_content"></Button>

<Button android:text="Attack"
 android:id="@+id/attack" 

 android:layout_width="wrap_content"
  android:layout_height="wrap_content"></Button>
  
</LinearLayout>

</LinearLayout>
